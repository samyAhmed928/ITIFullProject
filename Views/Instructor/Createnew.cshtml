@model InstructorVM
@{
    ViewData["Title"] = "Createnew";
}


<div class="container mt-5">
    <h2>Add Instructor</h2>
    <form method="post" action="/instructor/savenew">
        <div class="mb-3">
            <label for="Name" class="form-label">Instructor Name</label>
            <input type="text" class="form-control" value="@Model.Name" id="Name" name="Name" required>
        </div>
        <div class="mb-3">
            <label for="AccountName" class="form-label">Account Name</label>
            <input type="text" class="form-control" value="@Model.AccountName" id="AccountName" name="AccountName" required>
        </div>

        <div class="mb-3">
            <label for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" value="@Model.Address" id="Address" name="Address" required>
        </div>
        <div class="mb-3">
            <label for="Image" class="form-label">Image</label>
            <input type="text" class="form-control" value="@Model.Image" id="Image" name="Image" required>
        </div>
        <div class="mb-3">
            <label for="DeptId" class="form-label">Select Department</label>
            <select  class="form-control" id="DeptId" name="DeptId">
                @foreach (var dept in Model.DeptList)
                {
                    <option value="@dept.Id">@dept.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="CoursesList" class="form-label">Select Courses</label>
            <select multiple class="form-control" id="CoursesList" name="CoursesList">
                @foreach (var course in Model.CoursesList)
                {
                    <option value="@course.Id">@course.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


